  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm.jar"/>
    <pathelement location="${javac2.home}/asm-commons.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Innovatian.Idea.PowerShell -->
  
  <dirname property="module.innovatian.idea.powershell.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.innovatian.idea.powershell" value="${jdk.home.idea_iu-99.32}"/>
  <property name="module.jdk.bin.innovatian.idea.powershell" value="${jdk.bin.idea_iu-99.32}"/>
  <property name="module.jdk.classpath.innovatian.idea.powershell" value="jdk.classpath.idea_iu-99.32"/>
  
  <property name="compiler.args.innovatian.idea.powershell" value="${compiler.args}"/>
  
  <property name="innovatian.idea.powershell.output.dir" value="${module.innovatian.idea.powershell.basedir}/out/production/Innovatian.Idea.PowerShell"/>
  <property name="innovatian.idea.powershell.testoutput.dir" value="${module.innovatian.idea.powershell.basedir}/out/test/Innovatian.Idea.PowerShell"/>
  
  <path id="innovatian.idea.powershell.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="innovatian.idea.powershell.module.production.classpath">
    <path refid="${module.jdk.classpath.innovatian.idea.powershell}"/>
  </path>
  
  <path id="innovatian.idea.powershell.runtime.production.module.classpath">
    <pathelement location="${innovatian.idea.powershell.output.dir}"/>
  </path>
  
  <path id="innovatian.idea.powershell.module.classpath">
    <path refid="${module.jdk.classpath.innovatian.idea.powershell}"/>
    <pathelement location="${innovatian.idea.powershell.output.dir}"/>
  </path>
  
  <path id="innovatian.idea.powershell.runtime.module.classpath">
    <pathelement location="${innovatian.idea.powershell.testoutput.dir}"/>
    <pathelement location="${innovatian.idea.powershell.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.innovatian.idea.powershell">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.innovatian.idea.powershell">
    <patternset refid="excluded.from.module.innovatian.idea.powershell"/>
  </patternset>
  
  <path id="innovatian.idea.powershell.module.sourcepath">
    <dirset dir="${module.innovatian.idea.powershell.basedir}">
      <include name="src"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  <path id="innovatian.idea.powershell.module.test.sourcepath">
    <dirset dir="${module.innovatian.idea.powershell.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.innovatian.idea.powershell" depends="compile.module.innovatian.idea.powershell.production,compile.module.innovatian.idea.powershell.tests" description="Compile module Innovatian.Idea.PowerShell"/>
  
  <target name="compile.module.innovatian.idea.powershell.production" depends="register.custom.compilers" description="Compile module Innovatian.Idea.PowerShell; production classes">
    <mkdir dir="${innovatian.idea.powershell.output.dir}"/>
    <javac2 destdir="${innovatian.idea.powershell.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.innovatian.idea.powershell}/javac">
      <compilerarg line="${compiler.args.innovatian.idea.powershell}"/>
      <bootclasspath refid="innovatian.idea.powershell.module.bootclasspath"/>
      <classpath refid="innovatian.idea.powershell.module.production.classpath"/>
      <src refid="innovatian.idea.powershell.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.innovatian.idea.powershell"/>
    </javac2>
    
    <copy todir="${innovatian.idea.powershell.output.dir}/com/innovatian/idea/powershell">
      <fileset dir="${module.innovatian.idea.powershell.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
    <copy todir="${innovatian.idea.powershell.output.dir}">
      <fileset dir="${module.innovatian.idea.powershell.basedir}/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.innovatian.idea.powershell.tests" depends="register.custom.compilers,compile.module.innovatian.idea.powershell.production" description="compile module Innovatian.Idea.PowerShell; test classes" unless="skip.tests">
    <mkdir dir="${innovatian.idea.powershell.testoutput.dir}"/>
    <javac2 destdir="${innovatian.idea.powershell.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.innovatian.idea.powershell}/javac">
      <compilerarg line="${compiler.args.innovatian.idea.powershell}"/>
      <bootclasspath refid="innovatian.idea.powershell.module.bootclasspath"/>
      <classpath refid="innovatian.idea.powershell.module.classpath"/>
      <src refid="innovatian.idea.powershell.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.innovatian.idea.powershell"/>
    </javac2>
    
    <copy todir="${innovatian.idea.powershell.testoutput.dir}/com/innovatian/idea/powershell/test">
      <fileset dir="${module.innovatian.idea.powershell.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.innovatian.idea.powershell" description="cleanup module">
    <delete dir="${innovatian.idea.powershell.output.dir}"/>
    <delete dir="${innovatian.idea.powershell.testoutput.dir}"/>
  </target>
  
  <property name="innovatian.idea.powershell.plugin.path.jar" value="${module.innovatian.idea.powershell.basedir}/Innovatian.Idea.PowerShell.jar"/>
  
  <!-- Build archive for plugin 'Innovatian.Idea.PowerShell' -->
  <target name="plugin.build.jar.innovatian.idea.powershell" depends="compile.module.innovatian.idea.powershell" description="Build plugin archive for module &apos;Innovatian.Idea.PowerShell&apos;">
    <jar destfile="${innovatian.idea.powershell.plugin.path.jar}" duplicate="preserve">
      <zipfileset dir="${module.innovatian.idea.powershell.basedir}/out/production/Innovatian.Idea.PowerShell"/>
      <zipfileset file="${module.innovatian.idea.powershell.basedir}/META-INF/plugin.xml" prefix="META-INF"/>
      <manifest>
        <attribute name="Created-By" value="IntelliJ IDEA"/>
        <attribute name="Manifest-Version" value="1.0"/>
      </manifest>
    </jar>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.innovatian.idea.powershell" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, plugin.build.jar.innovatian.idea.powershell" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>